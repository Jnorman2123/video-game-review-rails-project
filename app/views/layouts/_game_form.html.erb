<%= form_for @game do |f| %> 
    <%= f.label :title %>
    <%= f.text_field :title %> 
    <br>
    <%= f.label :console %>
    <%= f.text_field :console %>
    <br>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <br>
    <%= f.label 'Image Url' %>
    <%= f.text_field :img_url %>
    <br>
    <%= f.label :release_date %>
    <%= f.date_select :release_date, start_year: 1980, end_year: 2020, order: [:month, :day, :year] %>
    <br>
    <%= f.submit %>
<% end %>


<h1><%= @game.title + " Show Page" %></h1>
<br>
<h2><%="Available on " + @game.console %>
<br>
<h2><%="Genre: " + @game.genre %>
<br>
<h2><%= image_tag @game.img_url %>
<br>
<h2><%="Released " + "#{@game.release_date}" %>
<br>