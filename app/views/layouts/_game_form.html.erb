<%= form_for @game do |f| %> 
    <%= f.label :title %>
    <%= f.text_field :title %> 
    <br>
    <%= f.fields_for :consoles do |console| %>
        <%= console.label "Console Name" %>
        <%= console.text_field :name %>
    <% end %>
    <br>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <br>
    <%= f.label 'Image Url' %>
    <%= f.text_field :img_url %>
    <br>
    <%= f.label :release_date %>
    <%= f.date_select :release_date, start_year: 1980, end_year: 2020, order: [:month, :day, :year] %>
    <br>
    <%= f.submit %>
<% end %>


